extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Teses
            .w3-container
                table.w3-table-all
                    tr  
                        th Nome 
                        th Número   
                        th Curso
                        th Instituição
                        th Título
                        th Data
                        th Tipo de Tese
                    each tese in lista
                        tr
                            td= tese.nome
                            td= tese.numero
                            td= tese.curso
                            td= tese.instituicao
                            td= tese.titulo
                            td= tese.data
                            td= tese.tipo
            footer.w3-container.w3-teal
                address Gerado por formApp