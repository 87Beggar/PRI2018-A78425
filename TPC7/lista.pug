extends form-ficheiro
block lista
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Ficheiros
            .w3-container
                table.w3-table-all
                    tr  
                        th Ficheiro
                        th Descrição   
                    each ficheiro in ficheiros
                        tr
                            td
                                a(href= ficheiro.link)= ficheiro.nome
                            td= ficheiro.descricao