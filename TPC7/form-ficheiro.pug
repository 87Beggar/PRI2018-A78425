extends layout
block content
    .w3-container
        .w3-card-4
            table(style={'width':'100%'}).w3-table-all
                tr(style={'width':'100%'})
                    td(style={'width':'100%'})
                        header.w3-container.w3-teal
                            h3 Upload de um ficheiro
                        .w3-container
                            form.w3-container(action='/processaForm', method='POST', enctype='multipart/form-data', id='dados')
                                label.w3-text-teal
                                    b Ficheiro
                                input.w3-input.w3-border.w3-light-grey(type='file', name='ficheiro')

                                label.w3-text-teal
                                    b Descrição
                                input.w3-input.w3-border.w3-light-grey(type='text', name='desc')

                                input.w3-btn.w3-blue-grey(type='submit', value='Enviar', id="reset")

                                <!-- button.w3-btn.w3-blue-grey(id="reset") Limpar --> 
                tr(style={'width':'100%'})
                    td
                        button(id="show") Mostrar Lista
                    td
                        button(id="hide") Esconder Lista
                tr(style={'width':'100%'})
                    td(style={'width':'100%'}, id='lista')
                        block lista

                        footer.w3-container.w3-teal
                            address Gerado por formApp